@model AppointmentHistoryDetailsVM

@{
    ViewData["Title"] = "Appointment History Details";
}

@section Header {
    Appointment History
}

@section loc {
    Details
}

<div class="col-md-12">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">Appointment History Details</h3>
        </div>
        <div class="card-body">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            else if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <!-- Display Errors -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <!-- Appointment History Details -->
            <div class="form-group">
                <label for="Name">Name</label>
                <input asp-for="Name" class="form-control" id="Name" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Status">Status</label>
                <input asp-for="Status" class="form-control" id="Status" readonly />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Notes">Notes</label>
                <textarea asp-for="Notes" class="form-control" id="Notes" readonly></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="AppointmentName">Appointment Name</label>
                <input asp-for="AppointmentName" class="form-control" id="AppointmentName" readonly />
                <span asp-validation-for="AppointmentName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="AnimalName">Animal Name</label>
                <input asp-for="animal.Name" class="form-control" id="AnimalName" readonly />
                <span asp-validation-for="animal.Name" class="text-danger"></span>
            </div>

           

            <!-- Buttons -->
            <div class="form-group mt-4">
                <a asp-controller="AppointmentHistory" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Index
                </a>
            </div>

        </div>
    </div>
</div>
