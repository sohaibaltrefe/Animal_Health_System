@model MedicalRecordFormVM

@section Header {
        Create Medical Record
}
@section loc {
        create
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="col-md-12">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">Create Medical Record</h3>
        </div>
        <form asp-controller="MedicalRecord" asp-action="Create" method="post">
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name">Medical Record Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Medical Record Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FarmId">Farm</label>
                    <select asp-for="FarmId" class="form-control" asp-items="Model.Farm" onchange="updateAnimals(this)">
                        <option value="">Select a Farm</option>
                    </select>
                    <span asp-validation-for="FarmId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AnimalId">Animal</label>
                    <select asp-for="AnimalId" class="form-control" asp-items="Model.Animal">
                        <option value="">Select an Animal</option>
                    </select>
                    <span asp-validation-for="AnimalId" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-block">Create Medical Record</button>
                <a asp-action="Index" class="btn btn-secondary btn-block">Cancel</a>
            </div>
        </form>
    </div>
</div>
@section script{
    <script>
        function updateAnimals(farmSelect) {
            var farmId = farmSelect.value;
            var animalSelect = document.getElementById("AnimalId");

            // مسح الخيارات القديمة
            animalSelect.innerHTML = '<option value="">Select an Animal</option>';

            if (farmId) {
                fetch(`/MedicalRecord/GetAnimalsByFarm?farmId=${farmId}`)
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(animal => {
                            var option = new Option(animal.name, animal.id);
                            animalSelect.add(option);
                        });
                    })
                    .catch(error => console.error("Error fetching animals:", error));
            }
        }
    </script>

}