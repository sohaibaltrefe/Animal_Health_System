@model VaccineDetailsVM

@section Header {
    Vaccine
}

@section loc {
    Details
}

@{
    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];
}

@if (successMessage != null)
{
    <div class="alert alert-success">@successMessage</div>
}

@if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="col-md-12">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">Vaccine Details</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="Name">Vaccine Name</label>
                <input asp-for="Name" class="form-control" id="Name" readonly />
            </div>

            <div class="form-group">
                <label for="Dose">Dose</label>
                <input asp-for="Dose" class="form-control" id="Dose" readonly />
            </div>

            <div class="form-group">
                <label for="AdministrationDate">Administration Date</label>
                <input asp-for="AdministrationDate" class="form-control" id="AdministrationDate" readonly value="@Model.AdministrationDate.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group">
                <label for="MedicalRecord">Medical Record</label>
                <input value="@Model.MedicalRecordDetails" class="form-control" id="MedicalRecord" readonly />
            </div>

            <div class="form-group">
                <label for="Veterinarian">Veterinarian</label>
                <input value="@Model.VeterinarianName" class="form-control" id="Veterinarian" readonly />
            </div>

            <div class="form-group mt-4">
                <a asp-controller="Vaccine" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Index
                </a>
            </div>
        </div>
    </div>
</div>
