@model Animal_Health_System.PL.Areas.Dashboard.ViewModels.FarmHealthSummaryVIMO.FarmHealthSummaryFormVM
@section Header {
    MedicalRecord
}
@section loc {
    show
}
<h2>Create Farm Health Summary</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FarmId">Farm</label>
        <select asp-for="FarmId" asp-items="Model.Farms" class="form-control"></select>
        <span asp-validation-for="FarmId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalAnimals"></label>
        <input asp-for="TotalAnimals" class="form-control" />
        <span asp-validation-for="TotalAnimals" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HealthyAnimals"></label>
        <input asp-for="HealthyAnimals" class="form-control" />
        <span asp-validation-for="HealthyAnimals" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SickAnimals"></label>
        <input asp-for="SickAnimals" class="form-control" />
        <span asp-validation-for="SickAnimals" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AnimalsUnderTreatment"></label>
        <input asp-for="AnimalsUnderTreatment" class="form-control" />
        <span asp-validation-for="AnimalsUnderTreatment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastUpdated"></label>
        <input asp-for="LastUpdated" class="form-control" type="date" />
        <span asp-validation-for="LastUpdated" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
