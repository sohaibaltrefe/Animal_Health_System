@model Animal_Health_System.PL.Areas.Dashboard.ViewModels.FarmHealthSummaryVIMO.FarmHealthSummaryDetailsVM
@section Header {
    MedicalRecord
}
@section loc {
    show
}
<h2>Details for @Model.Name</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Farm</th>
        <td>@Model.Farm?.Name</td>
    </tr>
    <tr>
        <th>Total Animals</th>
        <td>@Model.TotalAnimals</td>
    </tr>
    <tr>
        <th>Healthy Animals</th>
        <td>@Model.HealthyAnimals</td>
    </tr>
    <tr>
        <th>Sick Animals</th>
        <td>@Model.SickAnimals</td>
    </tr>
    <tr>
        <th>Animals Under Treatment</th>
        <td>@Model.AnimalsUnderTreatment</td>
    </tr>
    <tr>
        <th>Last Updated</th>
        <td>@Model.LastUpdated.ToString("yyyy-MM-dd")</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to HashSet</a>
