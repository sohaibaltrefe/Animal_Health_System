@model MedicationStockFormVM

@section Header {
    Create Medication Stock
}
@section loc {
    Create
}

<div class="col-md-12">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">Create Medication Stock</h3>
        </div>
        <form asp-controller="MedicationStock" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>  <!-- عرض الأخطاء هنا -->

            <div class="card-body">
                <div class="form-group">
                    <label asp-for="MedicationId">Select Medication</label>
                    <select asp-for="MedicationId" class="form-control" asp-items="@Model.Medication"></select>
                </div>

                <div class="form-group">
                    <label asp-for="AvailableQuantity">Available Quantity</label>
                    <input asp-for="AvailableQuantity" class="form-control" />
                    <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastUpdated">Last Updated</label>
                    <input asp-for="LastUpdated" class="form-control" type="date" />
                    <span asp-validation-for="LastUpdated" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input asp-for="IsDeleted" class="form-check-input" type="checkbox" />
                    <label asp-for="IsDeleted" class="form-check-label">Is Deleted</label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Create</button>
                    <a asp-action="Index" class="btn btn-secondary btn-block">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
