@model MedicationStockDetailsVM

@section Header {
    Medication Stock
}

@section loc {
    Details
}

<div class="col-md-12">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">Medication Stock Details</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="MedicationName">Medication Name</label>
                <input asp-for="Medication.Name" class="form-control" id="MedicationName" readonly />
            </div>

            <div class="form-group">
                <label for="AvailableQuantity">Available Quantity</label>
                <input asp-for="AvailableQuantity" class="form-control" id="AvailableQuantity" readonly />
            </div>

            <div class="form-group">
                <label for="LastUpdated">Last Updated</label>
                <input asp-for="LastUpdated" class="form-control" id="LastUpdated" readonly />
            </div>

            <div class="form-group">
                <label for="IsDeleted">Status</label>
                <span class="form-control">
                    @if (Model.IsDeleted)
                    {
                        <span class="text-danger">Deleted</span>
                    }
                    else
                    {
                        <span class="text-success">Active</span>
                    }
                </span>
            </div>

            <!-- Edit and Back Buttons -->
            <div class="form-group mt-4">
                <a asp-controller="MedicationStock" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-controller="MedicationStock" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Index
                </a>
            </div>
        </div>
    </div>
</div>
