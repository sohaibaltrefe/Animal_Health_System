@model AnimalHealthHistoryDetailsVM

@section Header {
    Animal Health History
}

@section loc {
    Details
}

<div class="col-md-12">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">Animal Health Event Details</h3>
        </div>
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Error:</strong> @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <strong>Success:</strong> @TempData["SuccessMessage"]
                </div>
            }

            <!-- Animal Details -->
            <div class="form-group">
                <label for="AnimalName">Animal Name</label>
                <input value="@Model.AnimalName" class="form-control" id="AnimalName" readonly />
            </div>

            <div class="form-group">
                <label for="EventType">Event Type</label>
                <input value="@Model.EventType" class="form-control" id="EventType" readonly />
            </div>

            <div class="form-group">
                <label for="EventDate">Event Date</label>
                <input value="@Model.EventDate.ToString("yyyy-MM-dd")" class="form-control" id="EventDate" readonly />
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <textarea class="form-control" id="Description" readonly>@Model.Description</textarea>
            </div>

           

          

            <div class="form-group">
                <label for="UpdatedAt">Updated At</label>
                <input value="@(Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")" class="form-control" id="UpdatedAt" readonly />
            </div>

            <!-- Actions -->
            <div class="form-group mt-4">
                <a asp-controller="AnimalHealthHistory" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Index
                </a>
            </div>
        </div>
    </div>
</div>
    